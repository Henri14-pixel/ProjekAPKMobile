<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#F4F4F4"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".CartActivity">
    <RelativeLayout
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Keranjang"
            android:textColor="#000"
            android:textSize="24sp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="50dp"/>
    </RelativeLayout>
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="#FFF">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_lokasi"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="15dp"
                    android:text="Alamat Pengiriman :"
                    android:textColor="#000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Jl. Cendrawasih No. 25 Kebonagung, Kec. Kebonagung Kab. Jember"
                    android:textColor="#000"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#FFF">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_baseline_check_box_outline_blank_24"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/product2"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="Whiskas For Child Cat - 85 gr - Tuna dan White Fish"
                            android:textSize="14dp"
                            android:textColor="#000"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:text="Rp. 25,000"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_baseline_delete_24"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="45dp"/>
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_baseline_add_circle_outline_24"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="15dp"
                                android:foregroundGravity="center"/>
                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:text="1"
                                android:textColor="#000"
                                android:layout_marginTop="10dp"
                                android:textSize="24sp"
                                android:gravity="center"/>
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_baseline_remove_circle_outline_24"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="15dp"
                                android:foregroundGravity="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#FFF">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_baseline_check_box_outline_blank_24"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/product2"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="Whiskas For Child Cat - 85 gr - Tuna dan White Fish"
                            android:textSize="14dp"
                            android:textColor="#000"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:text="Rp. 25,000"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_baseline_delete_24"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="45dp"/>
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_baseline_add_circle_outline_24"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="15dp"
                                android:foregroundGravity="center"/>
                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:text="1"
                                android:textColor="#000"
                                android:layout_marginTop="10dp"
                                android:textSize="24sp"
                                android:gravity="center"/>
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_baseline_remove_circle_outline_24"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="15dp"
                                android:foregroundGravity="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#FFF">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_baseline_check_box_outline_blank_24"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/product2"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="Whiskas For Child Cat - 85 gr - Tuna dan White Fish"
                            android:textSize="14dp"
                            android:textColor="#000"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:text="Rp. 25,000"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_baseline_delete_24"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="45dp"/>
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_baseline_add_circle_outline_24"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="15dp"
                                android:foregroundGravity="center"/>
                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:text="1"
                                android:textColor="#000"
                                android:layout_marginTop="10dp"
                                android:textSize="24sp"
                                android:gravity="center"/>
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_baseline_remove_circle_outline_24"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="15dp"
                                android:foregroundGravity="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pengiriman"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:layout_marginLeft="15dp"/>
                    <Button
                        android:id="@+id/button"
                        android:layout_width="340dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginBottom="10dp"
                        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_up_24"
                        android:drawablePadding="8dp"
                        android:text="Pilih Pengiriman"
                        android:textColor="#000"
                        android:theme="@style/button"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="18sp"
                        android:text="Metode Pembayaran"
                        android:textColor="#000"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/image2"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff">
                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="20dp"
                            android:text="Ovo Cash"
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_baseline_radio_button"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="70dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/mandiri"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff">
                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="20dp"
                            android:text="Bank Mandiri"
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_baseline_radio_button"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="20dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/bni"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff">
                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="20dp"
                            android:text="Bank BNI"
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_baseline_radio_button"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="70dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:background="@color/primaryTextColor"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="210dp"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:background="@drawable/details"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="245dp"
                android:gravity="center"
                android:text="Check Out"
                android:textSize="16sp"
                android:textColor="#C49572"
                android:textStyle="bold"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Harga :"
                    android:textColor="#FFF"
                    android:layout_marginLeft="25dp"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 75,000"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:layout_marginLeft="25dp"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>